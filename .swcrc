{
  "env": {
    "targets": {
      "node": 16
    }
  },
  "jsc": {
    "parser": {
      "syntax": "typescript",
      "dynamicImport": true,
      "decorators": true
    },
    "target": "es2020",
    "transform": {
      "decoratorMetadata": true
    },
    "baseUrl": "./",
    "paths": {
      "@config": ["./src/config"],
      "@api": ["./src/api"],
      "@models": ["./src/models"],
      "@services": ["./src/services"],
      "@loaders": ["./src/loaders"]
    }
  }
}
